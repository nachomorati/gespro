<div class="container">
	<p class="error"></p>
	<div class="row">
		<h2>Listado de productos</h2>
		<div class="col-sm-3">
			<input type="text" name="code_filter" id="code_filter" placeholder="filtrar por codigo" class="form-control">
		</div>
	</div>
	<div class="row">
		<div class="table-responsive">
		  <table class="table" id="products_table">
		    <thead>
		      <tr>
		        <th class="t_head" id="code">#</th>
		        <th class="t_head" id="name">Descripcion</th>
		        <th class="t_head" id="stock">Stock</th>
		        <th class="t_head" id="comment">Comentarios</th>
		        <th></th>
		      </tr>
		    </thead>
		    <tbody>
		    	{{#each products}}
		      <tr>
		        <td>{{code}}</td>
		        <td>{{name}}</td>
		        <td>{{stock}}</td>
		        <td>{{comment}}</td>
		        <td><a href="/product/{{_id}}">editar</a></td>
		      </tr>
		      	{{/each}}
		    </tbody>
		  </table>
		  </div>
		</div>
	</div>
</div>
