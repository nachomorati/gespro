<div class="container">
	<div class="jumbotron">
		<h1>Cargar Venta</h1>
	</div>

	{{#if flashError}}
		<p class="flashMessage text-center text-danger"><strong>{{flashError}}</strong></p>
	{{/if}}

	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<form action="/savesale" class="form" role="form" method="POST" id="savesale_form">

				<h2>Datos del producto</h2>
					<div class="row">
						<div class="col-sm-12">
							<div class="form-group">
								<label for="product">Producto</label>
								<select name="product" id="product" class="form-control" required>
									{{#each products}}
										<option value="{{_id}}">{{name}}</option>
									{{/each}}
								</select>
							</div>
							<div class="form-group col-sm-4">
								<label for="stock_input">Stock</label>
								<input class="form-control" type="text" id="stock_input" readonly>
							</div>
							<div class="form-group col-sm-4">
								<label for="code">Codigo</label>
								<input class="form-control" type="text" id="code" readonly>
							</div>
							<div class="form-group col-sm-4">
								<label for="provider">Proveedor</label>
								<input class="form-control" type="text" id="provider" readonly>
							</div>
							<div class="form-group col-sm-12">
								<label for="comment">Comentarios</label>
								<input class="form-control" type="text" id="comment" readonly>
							</div>
							<div class="form-group col-sm-4">
								<label for="qty">cantidad</label>
								<input class="form-control" type="number" name="qty" required>
							</div>				
						</div>
					</div>
				
				<h2>Datos de la venta</h2>
					<div class="form-group col-sm-6">
						<label for="sale_date">Fecha</label>
						<input class="form-control" type="date" name="sale_date" required>
					</div>
					<div class="form-group col-sm-6">
						<label for="seller">Vendedor</label>
						<input class="form-control" type="text" name="seller" required>
					</div>

				<button type="btn btn-success">Cargar</button>
			</form>	
		</div>
	</div>

</div> 